<h2><%=l 'Welcome' %></h2>
<form action="login" enctype="multipart/form-data" id="login" method="post">
    <table>
        <tr>
            <td><%=l 'User' %>:</td>
            <td><%= text_field 'user' %></td>
        </tr><tr>
            <td><%=l 'Passphrase' %>:</td>
            <td><%= password_field 'pass' %></td>
        </tr>
    </table>
    <br>
    <%= submit_button l 'Login' %>
</form>
